@model Monitoring.Models.HealthRec

<h1 class="text-lg-center" style="color:#058789;">ADD HEALTH RECORD</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="ChildId" class="control-label"></label>
        <select asp-for="ChildId" class="form-control" asp-items="ViewBag.ChildId"></select>
    </div>
    <div class="form-group">
        <label asp-for="Height"></label>
        <input asp-for="Height" class="form-control" />
        <span asp-validation-for="Height" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Weight"></label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BMI" class="control-label"></label>
        <input asp-for="BMI" class="form-control" readonly />
        <span asp-validation-for="BMI" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Heart_Rate"></label>
        <input asp-for="Heart_Rate" class="form-control" />
        <span asp-validation-for="Heart_Rate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Blood_Pressure"></label>
        <input asp-for="Blood_Pressure" class="form-control" />
        <span asp-validation-for="Blood_Pressure" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Temperature"></label>
        <input asp-for="Temperature" class="form-control" />
        <span asp-validation-for="Temperature" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date_Time"></label>
        <input asp-for="Date_Time" class="form-control" />
        <span asp-validation-for="Date_Time" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DocId" class="control-label"></label>
        <select asp-for="DocId" class="form-control" asp-items="ViewBag.DocId"></select>
    </div>

    <div class="row mt-2">
        <div class="col-md-6 ">
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary w-100" />
            </div>
        </div>
   
    <div class="col-md-6 ">
        <a asp-action="Index" class="btn btn-secondary w-100"><i class="fa-solid fa-table"></i> Back to List</a>

    </div>
    </div>
</form>
